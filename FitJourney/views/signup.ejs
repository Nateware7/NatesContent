<%- include('partials/header') -%>

<div class="min-h-screen bg-zinc-950">
  <section class="grid grid-cols-1 md:grid-cols-3 min-h-screen">
    <!-- Left Image -->
    <div class="hidden md:block relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-zinc-950/20 to-transparent z-10 mb-36"></div>
      <img src="/imgs/pool.png" alt="Pool" class="w-full h-full object-cover">
    </div>

    <!-- Center Sign-Up Form -->
    <div class="flex items-center justify-center p-8 bg-zinc-950">
      <div class="w-full max-w-md space-y-6">
        <!-- Added Logo -->
        <div class="flex justify-center mb-20">
          <img 
            src="/RealBrand/FitJourneyTitle.png" 
            alt="RealFit Logo" 
            class="w-full h-full lg:w-auto md:w-auto"
          >
        </div>

        <div class="text-center">
          <h1 class="text-3xl font-bold text-white mb-2">Create Account</h1>
          <p class="text-zinc-400">Join our community of chefs, coaches, and explorers</p>
        </div>

        <!-- Error Messages -->
        <% if (locals.messages.errors) { %>
          <% messages.errors.forEach(el => { %>
            <div class="bg-red-500/10 border border-red-500/20 text-red-400 rounded-lg p-4 mb-4 flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="8" x2="12" y2="12"/>
                <line x1="12" y1="16" x2="12.01" y2="16"/>
              </svg>
              <%= el.msg %>
            </div>
          <% }) %>
        <% } %>

        <!-- Info Messages -->
        <% if (locals.messages.info) { %>
          <% messages.info.forEach(el => { %>
            <div class="bg-blue-500/10 border border-blue-500/20 text-blue-400 rounded-lg p-4 mb-4 flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <%= el.msg %>
            </div>
          <% }) %>
        <% } %>

        <form action="/signup" method="POST" class="space-y-4">
          <div class="space-y-2">
            <label for="userName" class="text-sm font-medium text-zinc-200">Username</label>
            <input 
              type="text" 
              id="userName" 
              name="userName" 
              placeholder="Enter your username"
              class="w-full px-4 py-2 bg-zinc-900 border border-zinc-800 rounded-lg focus:ring-2 focus:ring-blue-500 text-white"
            >
          </div>

          <div class="space-y-2">
            <label for="exampleInputEmail1" class="text-sm font-medium text-zinc-200">Email address</label>
            <input 
              type="email" 
              id="exampleInputEmail1" 
              name="email" 
              placeholder="you@example.com"
              class="w-full px-4 py-2 bg-zinc-900 border border-zinc-800 rounded-lg focus:ring-2 focus:ring-blue-500 text-white"
            >
            <p class="text-xs text-zinc-400">We'll never share your email with anyone else.</p>
          </div>

          <div class="space-y-2">
            <label for="password" class="text-sm font-medium text-zinc-200">Password</label>
            <input 
              type="password" 
              id="password" 
              name="password" 
              placeholder="••••••••"
              class="w-full px-4 py-2 bg-zinc-900 border border-zinc-800 rounded-lg focus:ring-2 focus:ring-blue-500 text-white"
            >
          </div>

          <div class="space-y-2">
            <label for="confirmPassword" class="text-sm font-medium text-zinc-200">Confirm Password</label>
            <input 
              type="password" 
              id="confirmPassword" 
              name="confirmPassword" 
              placeholder="••••••••"
              class="w-full px-4 py-2 bg-zinc-900 border border-zinc-800 rounded-lg focus:ring-2 focus:ring-blue-500 text-white"
            >
          </div>

          <div class="space-y-2">
            <label for="role" class="text-sm font-medium text-zinc-200">Select Your Role</label>
            <select 
              id="role" 
              name="role" 
              class="w-full px-4 py-2 bg-zinc-900 border border-zinc-800 rounded-lg focus:ring-2 focus:ring-blue-500 text-white"
            >
              <option value="Chef">Chef</option>
              <option value="Coach">Coach</option>
              <option value="Explorer" selected>Explorer</option>
            </select>
          </div>

          <button 
            type="submit" 
            class="w-full py-3 px-4 bg-oranges hover:bg-oranges text-white font-medium rounded-lg transition-colors duration-200"
          >
            Create Account
          </button>

          <p class="text-center text-sm text-zinc-400">
            Already have an account? 
            <a href="/login" class="text-oranges hover:text-white">Sign in</a>
          </p>
        </form>
      </div>
    </div>

    <!-- Right Image -->
    <div class="hidden md:block relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-l from-zinc-950/20 to-transparent z-10"></div>
      <img src="/imgs/RunningHill.png" alt="Running Hill" class="w-full h-full object-cover">
    </div>
  </section>
</div>

<%- include('partials/footer') -%>